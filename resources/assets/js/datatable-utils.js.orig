function loadDataTable(element){
  $(element).dataTable({
    "bJQueryUI": true,
    "sPaginationType": "full_numbers",
    "oLanguage": {
      "sLengthMenu": "Exibir _MENU_ entradas por página",
      "sZeroRecords": "Nenhum registro encontrado",
      "sInfo": "Mostrando _START_ até _END_ de _TOTAL_ registro(s)",
      "sSearch": "Pesquisar: ",
      "oPaginate": {
        "sFirst": "Início",
        "sPrevious": "Anterior",
        "sNext": "Próximo",
        "sLast": "Último"
      }
    },
    //"aaSorting": [[0, 'asc']]
  });
}

